<div class="send-container">
    <h2>Create New App Card</h2>
</div>
<form class="form form-group" action="/create-card" method="POST">
<div class="form-components-container">
    <label>Card Title</label><br>
    <input name="Title" type="text" placeholder="Title"><br>
    <label id="message-label">Card Description</label><br>
    <input id="message-input" name="Description" type="text" placeholder="Description"><br><br>
    <div class="alert alert-success col-2" role="alert" style="visibility: hidden">
    Card Created
    </div>
    <input class="btn btn-primary" id="submit" type="submit" value="Submit"/>
</div>
    
</form>
<script>
$('#submit').click(function(){ 
   $('div').css('visibility','visible');
}); 
</script>